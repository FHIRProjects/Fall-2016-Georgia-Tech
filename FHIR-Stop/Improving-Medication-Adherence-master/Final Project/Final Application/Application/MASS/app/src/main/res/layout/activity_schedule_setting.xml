<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E4072"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:ems="10"
            android:id="@+id/cancel"
            android:layout_weight=".25"
            android:textColor="#E2E2E2"
            android:gravity="center_vertical|center"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Schedule"
            android:ems="25"
            android:id="@+id/setSchedule"
            android:layout_weight=".5"
            android:textColor="#E2E2E2"
            android:gravity="center_vertical|center"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:ems="9"
            android:id="@+id/save"
            android:layout_weight=".25"
            android:textColor="#E2E2E2"
            android:textSize="20sp"
            android:gravity="center_vertical|center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set time to take medication:"
            android:ems="10"
            android:id="@+id/textView1"
            android:layout_weight=".25"
            android:textColor="#000000"
            android:gravity="center_vertical|center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/medicationNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="medication names"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="40dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dosageTime"
            android:hint="HH:MM (24-Hour time)"
            android:paddingLeft="25dp"
            android:gravity="center_vertical|center"
            tools:inputType="text" />
    </LinearLayout>

</LinearLayout>